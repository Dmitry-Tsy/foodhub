{
  "expo": {
    "name": "FoodHub",
    "slug": "foodhub",
    "owner": "popapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foodhub.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "FoodHub использует вашу геолокацию для поиска ресторанов поблизости",
        "NSCameraUsageDescription": "FoodHub нужен доступ к камере для фотографий блюд",
        "NSPhotoLibraryUsageDescription": "FoodHub нужен доступ к галерее для выбора фотографий блюд"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.foodhub.app",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Разрешите FoodHub доступ к вашей геолокации"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "FoodHub нужен доступ к вашим фотографиям для загрузки изображений блюд"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4dcf4250-6b85-40e9-9337-1dc4bb543c49"
      }
    }
  }
}
